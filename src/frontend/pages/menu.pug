doctype html
html(lang="es")
    head
        include ../components/head.pug
        title Menu - Tic Tac Toe
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        style 
            include ../css/index.css
    body 
        include ../components/header.pug
        .container.min-vh-100
            .row.mt-5
                h4.text-center.my-5 Bienvenido al menu 
                    b.me-2 #{player_name}
            .row.mt-5
                a(href="/create-game" class="btn btn-primary btn-lg col-12 col-md-6 col-lg-4 col-xl-3 mx-auto my-3")
                    span Crear partida
            .row
                a(href="/find-game" class="btn btn-primary btn-lg col-12 col-md-6 col-lg-4 col-xl-3 mx-auto my-3")
                    span Unirse a partida

        include ../components/footer.pug
doctype html
html(lang="es")
    head
        include ../components/head.pug
        title Buscar - Tic Tac Toe
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        style 
            include ../css/index.css
    body 
        include ../components/header.pug
        .container.min-vh-100
            .row.mt-5
                table.table.border.text-center
                    thead.bg-dark.text-light
                        tr
                            th(scope="col") ID
                            th(scope="col") Jugador
                            th(scope="col") Acciones
                    tbody#games
                    tfoot
                        tr
                            td(colspan="3")
                                b.text-center.my-5 Buscando partidas
                                i.fa-solid.fa-spinner.fa-spin.ms-2

            .row.mt-5
                a(href="/" class="btn btn-primary btn-lg col-12 col-md-6 col-lg-4 col-xl-3 mx-auto my-3")
                    span Volver al menu
        include ../components/footer.pug
    script
        include ../js/fetch.js
        include ../js/find.js